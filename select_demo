

PS3='Geben Sie die passende Zahl Ein: '
select opt in "bread" "cheese" "ham" "quit"
do
    case $opt in
        "bread")
            echo "you chose choice 1, $opt"
            ;;
        "cheese")
            echo "you chose choice 2, $opt"
            ;;
        "ham")
            echo "you chose choice $REPLY which is $opt"
            ;;
        "quit")
            break
            ;;
        *) echo "invalid option $REPLY";;
    esac
done
