#!/bin/bash     
#title          :load   
#description    :Generiert k√ºnstlich Systemauslastung
#author         :Jochen Reinholdt
#date           :20180823
#version        :1.0    
#usage          :./load 
#notes          :       
#bash_version   :4.4.12(1)-release
