#!/bin/bash     
#title          :analyze1
#description    :Auswertung der Spalten CPU idle, Datum und Uhrzeit in der Ausgabe von Vmstat
#author         :Jochen Reinholdt
#date           :20181112
#version        :1.0    
#usage          :./analyze1
#notes          :       
#bash_version   :4.4.12(1)-release
#============================================================================

# die Ausgabe von vmstat -n -t -S M 1 | tr -s " " wurde in einer Datei vmstat.log gespeichert
inputfile=vmstat.log

while read zeile
do
    value=$(echo $zeile | awk '{print $15}')
    date=$(echo $zeile | awk '{print $18}')
    timestamp=$(echo $zeile | awk '{print $19}')
    echo $date $timestamp $value
done < $inputfile
